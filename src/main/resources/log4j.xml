<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<!--

  Set the threshold to "info" in production system. This will filter out all
  debug messages. If you only want to enable/disable debugging for certain
  parts of the system, change the "level" attribute of the appropriate logger.

-->
<log4j:configuration debug="false"
                     threshold="info"
                     xmlns:log4j='http://jakarta.apache.org/log4j/'>

    <renderer renderedClass="cern.c2mon.shared.common.filter.FilteredDataTagValue"
              renderingClass="cern.c2mon.shared.daq.filter.FilteredDataTagValueRenderer" />

    <renderer renderedClass="cern.c2mon.shared.common.datatag.SourceDataTagValue"
              renderingClass="cern.c2mon.shared.daq.datatag.SourceDataTagValueRenderer" />

    <renderer renderedClass="cern.c2mon.shared.daq.command.SourceCommandTagValue"
              renderingClass="cern.c2mon.shared.daq.command.SourceCommandTagValueRenderer" />

    <renderer renderedClass="cern.c2mon.shared.daq.command.SourceCommandTagReport"
              renderingClass="cern.c2mon.shared.daq.command.SourceCommandReportRenderer" />


    <!--
       Create a RollingFileAppender.
     -->
    <appender name="FileAppender" class="org.apache.log4j.RollingFileAppender">
        <errorHandler class="org.apache.log4j.varia.FallbackErrorHandler">
            <root-ref/>
            <appender-ref ref="FallbackConsoleAppender"/>
        </errorHandler>
        <param name="Append" value="true" />
        <param name="File" value="${c2mon.log.dir}/${c2mon.process.name}.log" />
        <param name="MaxBackupIndex" value="5" />
        <param name="MaxFileSize" value="3MB" />
        <param name="BufferedIO" value="false" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %c %x - %m%n"/>
        </layout>
    </appender>

    <appender name="SpringFileAppender" class="org.apache.log4j.RollingFileAppender">
        <param name="Append" value="true" />
        <param name="File" value="${c2mon.log.dir}/${c2mon.process.name}.spring.log" />
        <param name="MaxBackupIndex" value="2" />
        <param name="MaxFileSize" value="3MB" />
        <param name="BufferedIO" value="false" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %c [%t] %x - %m%n"/>
        </layout>
    </appender>

    <appender name="SourceDataTagLoggerAppender" class="org.apache.log4j.RollingFileAppender">
        <param name="Append" value="true" />
        <param name="File" value="${c2mon.log.dir}/${c2mon.process.name}.tag.log" />
        <param name="MaxFileSize" value="3MB" />
        <param name="MaxBackupIndex" value ="1" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-d{yyy-MM-dd HH:mm:ss.SSS} %m%n"/>
        </layout>
    </appender>

    <appender name="FilteredDataTagLoggerAppender" class="org.apache.log4j.RollingFileAppender">
        <param name="Append" value="true" />
        <param name="File" value="${c2mon.log.dir}/${c2mon.process.name}.filter.tag.log" />
        <param name="MaxFileSize" value="3MB" />
        <param name="MaxBackupIndex" value ="1" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-d{yyy-MM-dd HH:mm:ss.SSS} %m%n"/>
        </layout>
    </appender>

    <appender name="SourceCommandTagLoggerAppender" class="org.apache.log4j.RollingFileAppender">
        <param name="Append" value="true" />
        <param name="File" value="${c2mon.log.dir}/${c2mon.process.name}.cmd.log" />
        <param name="MaxFileSize" value="3MB" />
        <param name="MaxBackupIndex" value ="1" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-d{yyy-MM-dd HH:mm:ss.SSS} %m%n"/>
        </layout>
    </appender>

    <appender name="ReconfigurationLogAppender" class="org.apache.log4j.RollingFileAppender">
        <param name="Append" value="true" />
        <param name="File" value="${c2mon.log.dir}/${c2mon.process.name}.reconf.log" />
        <param name="MaxFileSize" value="3MB" />
        <param name="MaxBackupIndex" value ="1" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-d{yyy-MM-dd HH:mm:ss.SSS} %m%n"/>
        </layout>
    </appender>



    <!--
        Create a ConsoleAppender.
        Log messages are written to the console in case neither the FileAppender
        nor the FallbackFileAppender work.
      -->
    <appender name="FallbackConsoleAppender" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %c %x - %m%n"/>
        </layout>
    </appender>

    <!--
       Define the root logger.
       Debug messages are enabled on the root logger level. The AsyncAppender is
       used for all log output.
     -->
    <logger name="SourceDataTagLogger" additivity="false">
        <level value="debug"/>
        <appender-ref ref="SourceDataTagLoggerAppender" />
    </logger>

    <logger name="FilteredDataTagLogger" additivity="false">
        <level value="debug"/>
        <appender-ref ref="FilteredDataTagLoggerAppender" />
    </logger>

    <logger name="SourceCommandTagLogger" additivity="false">
        <level value="debug"/>
        <appender-ref ref="SourceCommandTagLoggerAppender" />
    </logger>

    <logger name="org.springframework" additivity="false">
        <level value="warn"/>
        <appender-ref ref="FileAppender" />
    </logger>

    <logger name="org.apache.activemq" additivity="false">
        <level value="warn"/>
        <appender-ref ref="FileAppender" />
    </logger>

    <logger name="cern.c2mon.daq.common.messaging.impl" additivity="false">
        <level value="debug"/>
        <appender-ref ref="FileAppender" />
    </logger>


    <logger name="ReconfigurationLogger" additivity="false">
        <level value="debug"/>
        <appender-ref ref="ReconfigurationLogAppender" />
    </logger>

    <logger name="cern.c2mon" additivity="false">
        <level value="debug"/>
        <appender-ref ref="FileAppender" />
    </logger>

    <logger name="cern.c2mon.daq.common.messaging.impl.ProxyJmsSender" additivity="false">
        <level value="fatal"/>
        <appender-ref ref="FileAppender" />
    </logger>

    <root>
        <level value="debug"/>
        <appender-ref ref="FileAppender" />
    </root>

</log4j:configuration>